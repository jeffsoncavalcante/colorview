{
    "manifest_version": 2,
    "name":"ColorView",
    "version":"1.0.0",
    "description": "Uma extens√£o que auxilia pessoas com Daltonimos",
    "browser_action":{
        "default_icon":"icon.png",
        "default_popup":"index.html"
    },
    "permissions": ["activeTab"],
    "background":{
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["content.js"]
        }
      ]
}